@page
@model NTWEB.Pages.PortfolioModel
@{
    ViewData["Title"] = "ادیت پادکست‌ها";
    ViewData["Description"] = "تدوین و ادیت حرفه‌ای پادکست با نیما ترابی؛ توی این بخش می‌تونی نمونه پادکست‌هایی که من تدوین کردم رو گوش بدی و لذت ببری!";
    ViewData["ActivePage"] = "Podcast";
}
<section id="podcast" class="podcast section light-background">
    <div class="container section-title" data-aos="fade-up">
        <h1>پادکست‌ها‌</h1>
        <p>
            در این بخش می‌تونید پادکست‌هایی که من در ویرایش و تنظیم آن‌ها نقش داشتم رو ببینید، گوش کنید و لذت ببرید.
        </p>
    </div>

    <div class="container">
        <div class="row gy-4" data-aos="fade-up" data-aos-delay="200">
            @foreach (var item in Model.Podcasts)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="podcast-card">
                        <div>
                            <h2>@item.Title</h2>
                            <a href="@item.Url" class="listen-btn" target="_blank">بشنوید :)</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
