@page
@model NTWEB.Pages.ResumeModel
@{
    ViewData["Title"] = "رزومه";
    ViewData["ActivePage"] = "Resume";
}
<div>
    <section id="resume" class="resume section" data-aos="fade-left" data-aos-delay="100">
        <div class="container section-title">
            <h2>رزومه</h2>
        </div>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 text-center">
                    <img src="~/images/profile.jpg" alt="Profile Image" class="img-fluid rounded-circle shadow-sm profile-img" />
                </div>
                <div class="col-lg-9">
                    <h3 class="resume-title">مشخصات فردی</h3>
                    <div class="row">
                        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="resume-item pb-0">
                                <h4>نام و نام خانوادگی</h4>
                                <p>@Model.ProfileInfo.FullName</p>
                            </div>

                            <div class="resume-item pb-0">
                                <h4>محل سکونت</h4>
                                <p>@Model.ProfileInfo.Location</p>
                            </div>

                            <div class="resume-item pb-0">
                                <h4>ایمیل</h4>
                                <p><a href="mailto:@(Model.ProfileInfo.Email)">@Model.ProfileInfo.Email</a></p>
                            </div>
                        </div>
                        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="resume-item pb-0">
                                <h4>تاریخ تولد</h4>
                                <p>@Model.ProfileInfo.BirthDate</p>
                            </div>

                            <div class="resume-item pb-0">
                                <h4>خدمت سربازی</h4>
                                <p>@Model.ProfileInfo.MilitaryStatus</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="skills" class="skills section" data-aos="fade-left" data-aos-delay="100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 d-none d-lg-block"></div>
                <div class="col-lg-9">
                    <h3 class="skills-title">مهارت‌های من</h3>
                    @for (int i = 0; i < Model.LocalSkills.Count; i++)
                    {
                        @if (i % 3 == 0)
                        {
                    @:<div class="progress-container">
                        }
                        <div class="progress">
                            <span class="skill">@Model.LocalSkills[i].Title</span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@Model.LocalSkills[i].Progress" aria-valuemin="0" aria-valuemax="100">
                                    <span class="val">@Model.LocalSkills[i].Progress%</span>
                                </div>
                            </div>
                        </div>

                        @if(i % 3 == 2 || Model.LocalSkills.Count-1 == i)
                        {
                    @:</div>
                        }
                    }
                </div>
            </div>
        </div>
    </section>
    <section id="languages" class="experience section" data-aos="fade-left" data-aos-delay="100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 d-none d-lg-block"></div>
                <div class="col-lg-9">
                    <h3 class="experience-title">زبان ها</h3>
                    <div class="row">
                        @for(int i=0;i<Model.Languages.Count;i++)
                        {
                            @if (i % 2 == 0)
                            {
                        @:<div class="col-lg-6">
                            }
                            <div class="experience-item pb-0">
                                <h4>@Model.Languages[i].Title</h4>
                                <p>سطح: @Model.Languages[i].Level</p>
                            </div>
                            if(i % 2 != 0 || Model.Languages.Count-1 == i)
                            {
                        @:</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="education" class="experience section" data-aos="fade-left" data-aos-delay="100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 d-none d-lg-block"></div>
                <div class="col-lg-9">
                    <h3 class="experience-title">تحصیلات</h3>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="experience-item pb-0">
                                <h4>@Model.Education.Degree | @Model.Education.School</h4>
                                <p>@Model.Education.Year</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="experiences" class="experience section" data-aos="fade-left" data-aos-delay="100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 d-none d-lg-block"></div>
                <div class="col-lg-9">
                    <h3 class="experience-title">سابقه کاری</h3>
                    <div class="row">
                        @for(int i=0;i<Model.Experiences.Count;i++)
                        {
                           <div>
                               <div class="experience-item pb-0">
                                   <h4>@Model.Experiences[i].JobTitle | @Html.Raw(@Model.Experiences[i].CompanyName)</h4>
                                   <p>@Model.Experiences[i].Description | <a asp-page="Podcast">کلیک کن!</a></p>
                               </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>