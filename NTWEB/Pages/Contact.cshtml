@page
@model NTWEB.Pages.ContactModel
@{
    ViewData["Title"] = "تماس بامن";
    ViewData["Description"] = "تماس با نیما ترابی؛ بخشی برای ارتباط با من و ارسال پیشنهادات یا دعوت به همکاری.";
    ViewData["ActivePage"] = "Contact";
}
<div>
    <section id="contact" class="form-section section" data-aos="fade-up">
        <div class="container section-title">
            <h1>تماس با من</h1>
        </div>

        <div class="container row col-lg-6">
            <div>
                <form id="form" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control custom-input" asp-for="ContactForm.Name" placeholder="نام و نام خانوادگی">
                        <span asp-validation-for="ContactForm.Name" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control custom-input" asp-for="ContactForm.Email" placeholder="ایمیل">
                        <span asp-validation-for="ContactForm.Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control custom-input" asp-for="ContactForm.Subject" placeholder="موضوع">
                        <span asp-validation-for="ContactForm.Subject" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control custom-input" asp-for="ContactForm.Message" rows="4" placeholder="متن پیام"></textarea>
                        <span asp-validation-for="ContactForm.Message" class="text-danger small"></span>
                    </div>
                    @if (TempData["OperationStatus"]?.ToString() == "success")
                    {
                        <div class="message-success">
                            <span>@TempData["OperationMessage"]</span>
                        </div>
                    }
                    else if (TempData["OperationStatus"]?.ToString() == "failure")
                    {
                        <div class="message-danger">
                            <span>@TempData["OperationMessage"]</span>
                        </div>
                    }
                    <button id="submitBtn" type="submit" class="btn custom-btn w-100">ارسال پیام</button>
                </form>
            </div>
            <div>
                <p>
                    اگه بخوای میتونی از طریق شبکه‌‌های مجازی زیر هم باهام در ارتباط باشی😉
                </p>
            </div>
            <div class="social-icons">
                <a href="https://www.instagram.com/nimatorabi.t/">
                    <img src="~/images/socialIcons/instagram.svg" loading="lazy" alt="آیکون اینستاگرام برای نیما ترابی" />
                    <span>Instagram</span>
                </a>
                <a href="https://t.me/nimatorabi_t">
                    <img src="~/images/socialIcons/telegram.svg" loading="lazy" alt="آیکون تلگرام برای نیما ترابی" />
                    <span>Telegram</span>
                </a>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("form");
            const btn = document.getElementById("submitBtn");

            if (form && btn) {
                form.addEventListener("submit", function (event) {
                    if (typeof ($) !== "undefined" && $(form).length && !$(form).valid()) {
                        event.preventDefault();
                        return;
                    }
                    btn.disabled = true;
                    btn.innerText = "در حال ارسال...";
                });
            }
        });
    </script>
}